@model Vote2.ViewModels.VoteInfoViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmVote">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="ModifiedBy" />


                <div class="form-group directiondiv">
                    <label class="control-label">Vote Name</label>
                    <input type="text" asp-for="VoteName" class="form-control" />
                    <span asp-validation-for="VoteName" class="text-danger"></span>
                </div>

                <div class="form-group directiondiv">
                    <label class="col-form-label">Faculty</label><span style="color:red;">*</span>
                    <select id="FacultyId" asp-for="FacultyId" asp-items="@ViewBag.GetddlFaculties" style="width: 100%;" class="" required>
                        <option disabled selected data-key="---select---">--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="FacultyId" class="text-danger"></span>
                </div>

                <div class="form-group directiondiv">
                    <label class="col-form-label">Departement</label>
                    <select id="DepartmentId" asp-items="@ViewBag.Departements" asp-for="DepartmentId" style="width: 100%;" class="" required>
                        <option disabled selected data-key="---select---">--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="DepartmentId"></span>
                </div>

                <div class="form-group directiondiv">
                    <label class="col-form-label">Section</label>
                    <select id="SectionId" asp-for="SectionId" asp-items="@ViewBag.Sections" style="width: 100%;" class="" required>
                        <option disabled selected data-key="---select---">--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="SectionId"></span>
                </div>

                <div class="form-group directiondiv">
                    <label class="col-form-label">Level</label>
                    <select id="LevelId" asp-for="LevelId" asp-items="@ViewBag.GetddlLevels" style="width: 100%;" class="" required>
                        <option disabled selected data-key="---select---">--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="LevelId"></span>
                </div>

                <div class="form-group directiondiv">
                    <label class="control-label">Start Date</label>
                    <input type="datetime-local" asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group directiondiv">
                    <label class="control-label">End Date</label>
                    <input type="datetime-local" asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="form-group directiondiv">
                    <div class="checkBox-con">
                        <div class="directiondiv has-tooltip">
                            <i class="fa fa-exclamation-circle bs-tooltip-auto Tool-Tip"></i>
                            <div class="Tool-Tip-div">
                              
                            </div>
                            <label >IsActive</label>
                        </div>
                        <input asp-for="IsActive" type="checkbox" id="IsActive">
                    </div>
                </div>

                @*<div class="form-group row directiondiv" id="QNoInPage-Div">

                <label asp-for="QNoInPage" data-key="qnoinpage">Question No. per Page</label>

                <div class="col-md-3">
                <input asp-for="QNoInPage" type="number" id="QNoInPage" step="1" min="1" id="QNoInPage" style="width:100%;" />
                </div>

                </div>*@

                <div class="form-group">
                    <button type="button" id="btnSave" data-key="save" onclick="Save()" class="btn btn-info">Save</button>
                    <button type="button" id="btnClose" data-key="close" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    .checkBox-con {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        flex-direction: column;
    }

        .checkBox-con label {
            font-size: 20px;
        }

        .checkBox-con input {
            width: 30px;
            height: 30px;
        }

    #QNoInPage-Div {
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
</style>

<script>
    $(document).ready(function () {
        $("#FacultyId").select2();
        $("#DepartmentId").select2();
        $("#SectionId").select2();
        $("#LevelId").select2();
    });



    $(document).ready(function () {
        debugger
        $('#FacultyId').change(function () {
            var _FacultyId = $("#FacultyId").val();
            $.ajax({
                type: "GET",
                url: "/Common/GetDepartementsByFacultyId?FacultyId=" + _FacultyId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $('#DepartmentId').empty();
                    $('#SectionId').empty();
                    $("#DepartmentId").append("<option disabled selected data-key=' select ' > SELECT </option>");
                    for (var i = 0; i < data.length; i++) {
                        var _DepartmentId = document.getElementById("DepartmentId");
                        var _option = document.createElement("option");
                        _option.text = data[i].Name;
                        _option.value = data[i].Id;
                        _DepartmentId.add(_option);
                    }
                },
                error: function (errormessage) {
                    SwalSimpleAlert(errormessage.responseText, "warning");
                }
            });
        });
    });


    $(document).ready(function () {
        $('#DepartmentId').change(function () {
            var _DepartmentId = $("#DepartmentId").val();
            $.ajax({
                type: "GET",
                url: "/Common/GetSectionsByDepartementId?DepartementId=" + _DepartmentId,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $('#SectionId').empty();
                    $("#SectionId").append("<option disabled selected data-key=' select ' > SELECT </option>");
                    for (var i = 0; i < data.length; i++) {
                        var _SectionId = document.getElementById("SectionId");
                        var _option = document.createElement("option");
                        _option.text = data[i].Name;
                        _option.value = data[i].Id;
                        _SectionId.add(_option);
                    }
                },
                error: function (errormessage) {
                    SwalSimpleAlert(errormessage.responseText, "warning");
                }
            });
        });
    });

</script>
